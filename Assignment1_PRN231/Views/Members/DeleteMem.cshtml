@model BusinessObject.Model.Member
@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete Member</h1>

<div>
    <h4>Member Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">CompanyName:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>

        <dt class="col-sm-2">City:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

        <dt class="col-sm-2">Country:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Country)</dd>

        <dt class="col-sm-2">Password:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
    </dl>

    <form asp-action="DeleteMem">
        <input type="hidden" asp-for="MemberId" />
        <div class="mt-3">
            <p class="text-danger">Are you sure you want to delete this product?</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ViewMember" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>